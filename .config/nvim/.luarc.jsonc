{
	"$schema": "https://raw.githubusercontent.com/sumneko/vscode-lua/master/setting/schema.json",
	"runtime": {
		"version": "LuaJIT"
	},
	"workspace": {
		"checkThirdParty": false,
		"library": [
			// Runtime and builtin libraries.
			"$VIMRUNTIME/lua",
			"${3rd}/luv/library",
			// Include some plugins for API completion.
			"$HOME/.local/share/nvim/site/pack/deps/start/mini.deps/lua",
			"$HOME/.local/share/nvim/site/pack/deps/opt/mini.extra/lua",
			"$HOME/.local/share/nvim/site/pack/deps/opt/mason-lspconfig.nvim/lua",
			"$HOME/.local/share/nvim/site/pack/deps/opt/mini.icons/lua",
			"$HOME/.local/share/nvim/site/pack/deps/opt/modus-themes.nvim/lua",
			"$HOME/.local/share/nvim/site/pack/deps/opt/nvim-treesitter/lua",
			"$HOME/.local/share/nvim/site/pack/deps/opt/mason.nvim/lua",
			"$HOME/.local/share/nvim/site/pack/deps/opt/mini.pick/lua",
			"$HOME/.local/share/nvim/site/pack/deps/opt/nvim-lspconfig/lua",
			"$HOME/.local/share/nvim/site/pack/deps/opt/oil.nvim/lua"
		]
	}
}
